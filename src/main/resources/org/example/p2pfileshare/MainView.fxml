<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.p2pfileshare.controller.RootController">

    <!-- ================= MENU BAR ================= -->
    <top>
        <MenuBar>
            <menus>

                <!-- Menu File -->
                <Menu text="File">
                    <items>
                        <MenuItem text="Chọn thư mục chia sẻ..." onAction="#onChooseShareFolder" />
                        <SeparatorMenuItem />
                        <MenuItem text="Thoát" onAction="#onExit" />
                    </items>
                </Menu>

                <!-- Menu Help -->
                <Menu text="Trợ giúp">
                    <items>
                        <MenuItem text="Giới thiệu" onAction="#onAbout" />
                    </items>
                </Menu>

            </menus>
        </MenuBar>
    </top>

    <!-- ================= TAB PANE ================= -->
    <center>
        <TabPane fx:id="mainTabPane">
            <tabs>

                <!-- TAB PEER -->
                <Tab text="Peer" closable="false">
                    <fx:include source="PeerTab.fxml" fx:id="peerTab" />
                </Tab>

                <!-- TAB SHARE -->
                <Tab text="Tài liệu chia sẻ" closable="false">
                    <fx:include source="ShareTab.fxml" fx:id="shareTab" />
                </Tab>

                <!-- TAB SEARCH -->
                <Tab text="Tìm kiếm" closable="false">
                    <fx:include source="SearchTab.fxml" fx:id="searchTab" />
                </Tab>

                <!-- TAB HISTORY -->
                <Tab text="Lịch sử tải" closable="false">
                    <fx:include source="HistoryTab.fxml" fx:id="historyTab" />
                </Tab>

            </tabs>
        </TabPane>
    </center>

    <!-- ================= STATUS BAR ================= -->
    <bottom>
        <HBox spacing="10" style="-fx-background-color: #eeeeee;">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5" />
            </padding>
            <children>
                <Label text="Trạng thái:" />
                <Label fx:id="globalStatusLabel" text="Sẵn sàng" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
